%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title tewdew
    %link{:rel=>"stylesheet", :type=>"text/css", :href=>"/stylesheet.css"}
  %body
    #content
      #header
        %h2 tewdew
        %p Update a tasks status or remove it
      -unless @task.nil?
        %h4{:id=>"editTaskTitle"}= @task.title
        %div{ :id => "editTaskForms"}
          %div{ :id => "editTask" }
            %form{:method=>"post", :action=>"/update"}
              %input{:type=>"hidden", :name=>"_method", :value=>"put"}
              %input{:type=>"hidden", :name=>"task_id", :value=>"#{@task.id}", :class=>"task_id"}
              %input{:type=>"submit", :class=>"editTask", :value=>"Completed"}
          %div{ :id => "deleteTask" }
            %form{:method=>"post", :action=>"/delete"}
              %input{:type=>"hidden", :name=>"_method", :value=>"delete"}
              %input{:type=>"hidden", :name=>"task_id", :value=>"#{@task.id}", :class=>"task_id"}
              %input{:type=>"submit", :class=>"deleteTask", :value=>"Delete"}
      -else
        %p no task found